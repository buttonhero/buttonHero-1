#include <ShiftedLCD.h>
#include <SPI.h>

LiquidCrystal lcd(8);
const int latch = 12;
const int data = 11;
const int clck = 10;
int ledArray[8] = {128,64,32,16,8,4,2,1};
int delayArray[8] = {800,500,100,300,200,1000,2000,888};
int timer = 0;
int score = 0;

void setup() {
  lcd.begin(16,2);
  lcd.print("Score: ");
  lcd.setCursor(0,1);
  pinMode(latch,OUTPUT);
  pinMode(clck, OUTPUT);
  pinMode(data, OUTPUT);  
}

void loop() {
  for(int i = 0; i < 8; i++){
    lcd.print("Score: " + score);
    digitalWrite(latch,LOW);
    shiftOut(data, clck, LSBFIRST, ledArray[i]);
    digitalWrite(latch,HIGH);
    delay(delayArray[timer++]);
  }
  timer = 0;
}


